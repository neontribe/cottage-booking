<%# If the value at the display is !== false then display %>
<% if( display.attr( attrName + '()' ) !== false ) { %>
    <div class="form-item <%= type %>" <%= appendTemplate( view, this ) %>>
        <% if( label ) { %>
            <label for="<%= id %>">
                <%= pretifyString( label, true ) %><% if( required ) { %><span class="required">*</span><% } %>
            </label>
        <% } else if( required ) { %>
                <span class="required">*</span>
        <% } %>
        <%# Template gets appended %>
    </div>
<% } %>